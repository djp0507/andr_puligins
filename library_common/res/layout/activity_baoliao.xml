<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    
    >
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:background="@color/white"
	    android:layout_above="@+id/ll_med"
	    >
			 <include layout="@layout/line_grey"></include>
	        <EditText
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:hint="@string/zh_input_text"
			        android:layout_marginLeft="21dip"
			        android:layout_marginRight="21dip"
			        android:id="@+id/et_content"
			        android:gravity="top|left"
			        android:background="@null"
			        android:layout_marginTop="19dip"
			        />
			 
	        
	</LinearLayout>
     
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="80dip"
    android:id="@+id/ll_med"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_above="@+id/ll_bottom"
    >
	        <ImageView
		        android:layout_width="65dip"
		        android:layout_height="65dip"
		        android:id="@+id/iv_myimage"
		        android:scaleType="fitXY"
		        android:layout_marginLeft="20dip"
		        />
	        <RelativeLayout
			    android:layout_width="65dip"
			    android:layout_height="65dip"
			    android:layout_marginLeft="20dip"
			    android:id="@+id/rl_myvideo"
			    android:visibility="invisible"
			    >
			      <ImageView
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:id="@+id/iv_myvideo"
			        android:scaleType="fitXY"
			        />
			       <ImageView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:src="@drawable/complain_video"
			        android:layout_centerInParent="true"
			        />
			      </RelativeLayout>
	        
    </LinearLayout>
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:layout_alignParentBottom="true"
    android:id="@+id/ll_bottom"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >
    	 <LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
		    android:gravity="center"
		    android:id="@+id/ll_pic">
		    <Button
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:background="@drawable/btn_pic_selector"
			        android:id="@+id/btn_pic"
			        />
		    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/zh_pic"
	        android:gravity="center" 
	        android:textColor="@color/grey_font2"
	        android:layout_marginTop="2dip"
	        android:textSize="9dip"
	        />
    	 </LinearLayout>
    	 
    	 <LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
		    android:gravity="center"
		    android:id="@+id/ll_photo">
		    <Button
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:background="@drawable/btn_photo_selector"
			        android:id="@+id/btn_photo"
			        />
		    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/zh_photo"
	        android:gravity="center" 
	        android:textColor="@color/grey_font2"
	        android:layout_marginTop="2dip"
	        android:textSize="9dip"
	        />
    	 </LinearLayout>
    	 
    	 <LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
		    android:gravity="center"
		    android:id="@+id/ll_video">
		    <Button
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:background="@drawable/btn_video_selector"
			        android:id="@+id/btn_video"
			        />
		    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/zh_video"
	        android:gravity="center" 
	        android:textColor="@color/grey_font2"
	        android:layout_marginTop="2dip"
	        android:textSize="9dip"
	        />
    	 </LinearLayout>
    </LinearLayout>
</RelativeLayout>
