<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:background="@drawable/menu_item_selector"
    >
	<LinearLayout
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:orientation="vertical"
	     android:paddingTop="14dip"
	     android:paddingBottom="13dip"
	     android:paddingLeft="15dip"
	     android:paddingRight="18dip"
	 >
	 <LinearLayout
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:orientation="horizontal"
	     android:gravity="center_vertical"
	 >
	    <ImageView
	        android:id="@+id/iv_image"
	        android:layout_width="32dip"
	        android:layout_height="33dip"
	        android:scaleType="fitXY"
	      />
	    <LinearLayout
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:orientation="vertical"
		     android:gravity="center_vertical"
		 >
	    <TextView
	        android:id="@+id/tv_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="14sp"
	        android:textColor="@color/new_title_color"
	        android:layout_marginLeft="7dip"
	      />
	    <TextView
	        android:id="@+id/tv_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="9sp"
	        android:textColor="@color/grey_font2"
	        android:layout_marginLeft="7dip"
	      />
	    
	    </LinearLayout>
	    
    </LinearLayout>
    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_font"
        android:maxLines="2"
        android:textSize="13sp"
        android:layout_marginTop="13dip"
        />
    <LinearLayout
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:orientation="horizontal"
	     android:gravity="center_vertical|right"
	 >
	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:scaleType="fitXY"
	        android:src="@drawable/look_btn_nrmal"
	      />
	    <TextView
        android:id="@+id/tv_readcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_font"
        android:textSize="13sp"
        android:layout_marginLeft="7dip"
        />
	    <ImageView
	        android:id="@+id/im_discuss"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:scaleType="fitXY"
	        android:layout_marginLeft="33dip"
	      />
	    <TextView
        android:id="@+id/tv_commentcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_font"
        android:textSize="13sp"
        android:layout_marginLeft="7dip"
        android:layout_marginRight="5dip"
        />
	    </LinearLayout>
    </LinearLayout>
</LinearLayout>