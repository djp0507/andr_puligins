<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    
    >
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:background="@color/white"
	    android:layout_above="@+id/ll_med"
	    >
	        <RelativeLayout
			    android:layout_width="match_parent"
			    android:layout_height="45dip"
			    android:id="@+id/rl_org"
			    >
			      <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="问政对象"
			        android:gravity="center_vertical" 
			        android:layout_marginLeft="31dip"
			        android:textColor="@color/grey_font"
			        android:layout_alignParentLeft="true"
			        android:layout_centerVertical="true"
			        android:id="@+id/label_org"
			        />
			      <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="请选择问政机构"
			        android:gravity="center" 
			        android:layout_marginLeft="5dip"
			        android:layout_marginRight="5dip"
			        android:textColor="@color/blue_font"
			        android:layout_centerVertical="true"
			        android:layout_toLeftOf="@+id/iv_arrow"
			        android:id="@+id/tv_org"
			        android:layout_toRightOf="@+id/label_org"
			        />
			      <ImageView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentRight="true"
			        android:layout_centerVertical="true"
			        android:clickable="false"
			        android:layout_marginRight="8dip"
			        android:id="@+id/iv_arrow"
			        />
			 </RelativeLayout>
			 <include layout="@layout/line_grey"></include>
	        <EditText
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:hint="@string/zh_input_text"
			        android:layout_marginLeft="21dip"
			        android:layout_marginRight="21dip"
			        android:id="@+id/et_content"
			        android:gravity="top|left"
			        android:background="@null"
			        android:layout_marginTop="19dip"
			        />
			 
	        
	</LinearLayout>
     
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="80dip"
    android:id="@+id/ll_med"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_above="@+id/ll_bottom"
    >
	        <ImageView
		        android:layout_width="65dip"
		        android:layout_height="65dip"
		        android:id="@+id/iv_myimage1"
		        android:scaleType="fitXY"
		        android:layout_marginLeft="20dip"
		        />
	        <ImageView
		        android:layout_width="65dip"
		        android:layout_height="65dip"
		        android:id="@+id/iv_myimage2"
		        android:scaleType="fitXY"
		        android:layout_marginLeft="10dip"
		        />
	        <ImageView
		        android:layout_width="65dip"
		        android:layout_height="65dip"
		        android:id="@+id/iv_myimage3"
		        android:scaleType="fitXY"
		        android:layout_marginLeft="10dip"
		        />
	        <RelativeLayout
			    android:layout_width="65dip"
			    android:layout_height="65dip"
			    android:layout_marginLeft="10dip"
			    android:id="@+id/rl_myvideo"
			    android:visibility="invisible"
			    >
			      <ImageView
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:id="@+id/iv_myvideo"
			        android:scaleType="fitXY"
			        />
			       <ImageView
			        android:id="@+id/im_complain_video"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerInParent="true"
			        />
			      </RelativeLayout>
	        
    </LinearLayout>
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="55dip"
    android:layout_alignParentBottom="true"
    android:id="@+id/ll_bottom"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/bottom_tab_bg"
    >
    	 <LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
		    android:gravity="center"
		    android:id="@+id/ll_pic">
		    <Button
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/btn_pic"
			        android:clickable="false"
			        />
		    <TextView
		    android:id="@+id/tv_pic"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/zh_pic"
	        android:gravity="center" 
	        android:layout_marginTop="2dip"
	        android:textSize="9dip"
	        />
    	 </LinearLayout>
    	 
    	 <LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
		    android:gravity="center"
		    android:id="@+id/ll_photo">
		    <Button
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/btn_photo"
			        android:clickable="false"
			        />
		    <TextView
		    android:id="@+id/tv_photo"   
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/zh_photo"
	        android:gravity="center" 
	        android:layout_marginTop="2dip"
	        android:textSize="9dip"
	        />
    	 </LinearLayout>
    	 
    	 <LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
		    android:gravity="center"
		    android:id="@+id/ll_video"
		    >
		    <Button
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/btn_video"
			        android:clickable="false"
			        />
		    <TextView
		    android:id="@+id/tv_video"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/zh_video"
	        android:gravity="center" 
	        android:layout_marginTop="2dip"
	        android:textSize="9dip"
	        />
    	 </LinearLayout>
    </LinearLayout>
</RelativeLayout>
