<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <FrameLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
        >
       
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="150dip"
            android:scaleType="fitXY"
            android:src="@drawable/loading_ios" />
        
          <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:layout_gravity="bottom"
            android:background="#800f0f0f"
             >

               <TextView
                   android:id="@+id/textView1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentLeft="true"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="24dp"
                   android:text="夏天消暑好去处"
                   android:textColor="@color/white"
                   android:textSize="@dimen/activity_vertical_margin" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="19dp"
                    android:background="@color/blue_font"
                    android:padding="5dip"
                    android:text="进行中"
                    android:textColor="@color/white" />

          </RelativeLayout>
    </FrameLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        
        <TextView 
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="14dip"
        	android:layout_marginTop="10dip"
        	android:layout_marginRight="14dip"
        	android:textSize="12dip"
        	android:text="炎热的夏天就要到了，小伙伴们有啥好地方推荐的啊，大家来参与投票吧"
            />
        
         <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginTop="10dip"
	        android:layout_marginBottom="10dip"
	        >
         <TextView 
            android:layout_width="36dip"
        	android:layout_height="17dip"
            android:layout_marginLeft="14dip"
            android:background="@color/blue_font"
            android:textSize="12dip"
            android:textColor="@color/white"
            android:gravity="center"
        	android:text="单选"
            />
          <TextView 
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:gravity="right"
        	android:textSize="12dip"
        	android:layout_marginRight="14dip"
        	android:text="186人已投"
            />
    	</LinearLayout>
        
    </LinearLayout>
    <!--     分割线 -->
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@drawable/division"
        android:orientation="vertical" >
    </LinearLayout>
	<LinearLayout
	    android:id="@+id/ly_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
       <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:orientation="horizontal"
        >
           <ImageView
               android:id="@+id/radioButton1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="14dip"
               android:layout_gravity="center_vertical"
               android:src="@drawable/circle_btn_normal"
               />
             <TextView
               android:id="@+id/textView3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="14dip"
               android:text="沈阳植物园" />
       </LinearLayout>
        <!--     分割线 -->
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@drawable/division"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:orientation="vertical" >
    </LinearLayout>

       <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:orientation="horizontal"
        >
           <ImageView
               android:id="@+id/radioButton2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="14dip"
               android:layout_gravity="center_vertical"
               android:src="@drawable/circle_btn_press"
               />
             <TextView
               android:id="@+id/textView3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="14dip"
               android:text="沈阳植物园" />
       </LinearLayout>
        <!--     分割线 -->
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@drawable/division"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:orientation="vertical" >
    </LinearLayout>

       <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:orientation="horizontal"
        >
           <ImageView
               android:id="@+id/radioButton3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="14dip"
               android:layout_gravity="center_vertical"
               android:src="@drawable/circle_btn_normal"
               />
             <TextView
               android:id="@+id/textView3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="14dip"
               android:text="沈阳植物园" />
       </LinearLayout>
       
    </LinearLayout>
      <!--     分割线 -->
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@drawable/division"
        android:orientation="vertical" >
    </LinearLayout>
     <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

         <Button
             android:id="@+id/btn_vote"
             android:layout_width="100dip"
             android:layout_height="34dip"
             android:layout_marginTop="14dip"
             android:layout_marginLeft="12dip"
             android:background="@drawable/btn_vote_selector"
             android:onClick="toVote"
             android:text="@string/zh_vote_btn" />

         <LinearLayout
             android:id="@+id/ly_share"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="28dp"
             android:clickable="true"
             android:onClick="toShareVote"
             android:layout_marginTop="18dip"
             android:orientation="horizontal" >
         </LinearLayout>

       </RelativeLayout>
</LinearLayout>
