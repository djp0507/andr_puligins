<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@color/bg_color"
     >
	<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:gravity="center_horizontal"
    android:layout_marginTop="10dip"
    android:id="@+id/ll_logininfo"
    android:layout_alignParentTop="true"
    android:background="@color/white">
	    <RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="40dip"
		    android:id="@+id/rl_name"
		     >
	        	<TextView
		        android:layout_width="100dip"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="11dip"
		        android:id="@+id/tv_info1"
		        android:layout_alignParentLeft="true"
		        android:layout_centerVertical="true"
		        android:text="当前密码"
		        android:textSize="13sp"
		        android:textColor="@color/black_font"
		        />
	        	<EditText
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="13sp"
		        android:textColor="@color/grey_font2"
		        android:layout_toRightOf="@+id/tv_info1"
		        android:layout_marginLeft="10dip"
		        android:layout_centerVertical="true"
		        android:id="@+id/et_pwd"
		        android:background="@null"
		        android:minWidth="200dip"
		        android:inputType="textPassword"
		        
		        />
	        	<ImageView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/right_bnt_normal"
		        android:layout_marginRight="5dip"
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true"
		        android:visibility="gone"
		        
		        />
	     </RelativeLayout>
	     <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="4dip"
    android:orientation="vertical" 
    android:gravity="center_horizontal"
    android:background="@color/bg_color"></LinearLayout>
	    <RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="40dip"
		    android:background="@drawable/menu_item_selector"
		     >
	        	<TextView
		        android:layout_width="100dip"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="11dip"
		        android:id="@+id/tv_info2"
		        android:layout_alignParentLeft="true"
		        android:layout_centerVertical="true"
		        android:text="新密码"
		        android:textSize="13sp"
		        android:textColor="@color/black_font"
		        />
	        	<EditText
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="13sp"
		        android:textColor="@color/grey_font2"
		        android:layout_toRightOf="@+id/tv_info2"
		        android:layout_marginLeft="10dip"
		        android:layout_centerVertical="true"
		        android:id="@+id/et_pwd1"
		        android:background="@null"
		        android:minWidth="200dip"
		        android:inputType="textPassword"
		        
		        />
	        	<ImageView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/right_bnt_normal"
		        android:layout_marginRight="5dip"
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true"
		        android:visibility="gone"
		        
		        />
	     </RelativeLayout>
	      <include layout="@layout/line_grey"/>
	    <RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="40dip"
		    android:background="@drawable/menu_item_selector"
		    android:id="@+id/rl_email"
		     >
	        	<TextView
		        android:layout_width="100dip"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="11dip"
		        android:id="@+id/tv_info3"
		        android:layout_alignParentLeft="true"
		        android:layout_centerVertical="true"
		        android:text="确认密码"
		        android:textSize="13sp"
		        android:textColor="@color/black_font"
		        />
	        	<EditText
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="13sp"
		        android:textColor="@color/grey_font2"
		        android:layout_toRightOf="@+id/tv_info3"
		        android:layout_marginLeft="10dip"
		        android:layout_centerVertical="true"
		        android:id="@+id/et_pwd2"
		        android:background="@null"
		        android:inputType="textPassword"
		        android:minWidth="200dip"
		        />
	        	<ImageView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/right_bnt_normal"
		        android:layout_marginRight="5dip"
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true"
		        android:visibility="gone"
		        />
	     </RelativeLayout>
	     
	     <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="16dip"
		    android:orientation="vertical" 
		    android:gravity="center_horizontal"
		    android:background="@color/bg_color"></LinearLayout>
	     
	    <Button
		        android:layout_width="match_parent"
		        android:layout_height="38dip"
		        android:textColor="@color/blue_btn_white"
		        android:textSize="15sp"
		        android:text="确定修改"
		        android:id="@+id/btn_sure"
		        />
    </LinearLayout>

</RelativeLayout>
