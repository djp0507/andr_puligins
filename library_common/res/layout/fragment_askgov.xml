<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
 
    <fragment
    android:id="@+id/fl_hot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"   
    android:layout_marginBottom="45dip"
    class="com.lnzx.ui.askgov.AskHotFragment" />
    
    <fragment
    android:id="@+id/fl_trends"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"   
    android:layout_marginBottom="45dip"
    class="com.lnzx.ui.askgov.AskTrendsFragment"
    />
    
    <fragment
    android:id="@+id/fl_gov"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"   
    android:layout_marginBottom="45dip"
    class="com.lnzx.ui.askgov.AskGovListFragment"
    >
    
    </fragment>
    
    <fragment
    android:id="@+id/fl_my"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"   
    android:layout_marginBottom="45dip"
    class="com.lnzx.ui.askgov.AskMyFragment"
    >
    
    </fragment>
    
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="59dip"
    android:id="@+id/rl_bottom"
    android:layout_alignParentBottom="true"
    android:background="@drawable/complain_tabbar">
    	<LinearLayout
		    android:layout_width="@dimen/gov_ask_width"
		    android:layout_height="59dip"
		    android:id="@+id/ll_ask" 
		    android:orientation="vertical"
		    android:background="@drawable/semicircle"
		    android:gravity="center"
		    android:layout_centerInParent="true"
		    >
		    	<Button
				    android:layout_width="50dip"
				    android:layout_height="59dip"
				    android:id="@+id/btn_ask" 
				    >
				    </Button>
		    
		    </LinearLayout>
		    
    		<LinearLayout
		    android:layout_width="50dip"
		    android:layout_height="45dip"
		    android:id="@+id/ll_trends" 
		    android:orientation="vertical"
		    android:gravity="center"
		    android:layout_toLeftOf="@+id/ll_ask"
		    android:layout_alignParentBottom="true"
		    >
		    	<Button
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:id="@+id/btn_trends" 
				    android:clickable="false"
				    >
				    </Button>
				 <TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:id="@+id/tv_trends" 
				    android:text="@string/gov_trends"
				    android:textColor="@color/grey_font2"
				    android:layout_marginTop="4dip"
				    android:textSize="10sp"
				    >
				    </TextView>
		    </LinearLayout>
		    <LinearLayout
		    android:layout_width="50dip"
		    android:layout_height="45dip"
		    android:id="@+id/ll_hot" 
		    android:orientation="vertical"
		    android:gravity="center"
		    android:layout_toLeftOf="@+id/ll_trends"
		    android:layout_alignParentBottom="true"
		    >
		    	<Button
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:id="@+id/btn_hot" 
				    android:clickable="false"
				    >
				    </Button>
				 <TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:id="@+id/tv_hot" 
				    android:text="@string/gov_hot"
				    android:textColor="@color/grey_font2"
				    android:layout_marginTop="4dip"
				    android:textSize="10sp"
				    >
				    </TextView>
		    </LinearLayout>
		    
		    <LinearLayout
		    android:layout_width="50dip"
		    android:layout_height="45dip"
		    android:id="@+id/ll_gov" 
		    android:orientation="vertical"
		    android:gravity="center"
		    android:layout_toRightOf="@+id/ll_ask"
		    android:layout_alignParentBottom="true"
		    >
		    	<Button
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:id="@+id/btn_gov" 
				    android:clickable="false"
				    >
				    </Button>
				 <TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:id="@+id/tv_gov" 
				    android:text="@string/gov_gov"
				    android:textColor="@color/grey_font2"
				    android:layout_marginTop="4dip"
				    android:textSize="10sp"
				    >
				    </TextView>
		    </LinearLayout>
		    <LinearLayout
		    android:layout_width="50dip"
		    android:layout_height="45dip"
		    android:id="@+id/ll_my" 
		    android:orientation="vertical"
		    android:gravity="center"
		    android:layout_toRightOf="@+id/ll_gov"
		    android:layout_alignParentBottom="true"
		    >
		    	<Button
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:id="@+id/btn_my" 
				    android:clickable="false"
				    >
				    </Button>
				 <TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:id="@+id/tv_my" 
				    android:text="@string/gov_my"
				    android:textSize="10sp"
				    android:textColor="@color/grey_font2"
				    android:layout_marginTop="4dip"
				    >
				    </TextView>
		    </LinearLayout>
        </RelativeLayout>

</RelativeLayout>
