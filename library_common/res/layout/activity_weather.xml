<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weather_bg"
    >
    <RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/rl_title"
			android:layout_alignParentTop="true"
			android:minHeight="60dip"
			>
			<Button 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_centerVertical="true"
		    android:id="@+id/btn_left"
		    android:background="@drawable/btn_picback_selector"
		    >
		</Button>
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:id="@+id/tv_title"
		    android:textSize="18sp"
		    android:textColor="@color/white"
		    android:singleLine="true"
		    android:layout_centerInParent="true"
		    android:text="天气"
		    >
		</TextView>
		</RelativeLayout>
		
    	 <LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/rl_title"
			android:orientation="horizontal"
			android:layout_marginTop="30dip"
			android:gravity="center"
			android:id="@+id/ll_observer"
			>
			<ImageView 
			    android:layout_width="80dip"
			    android:layout_height="80dip"
			    android:id="@+id/iv_observe"
			    >
			</ImageView>
			 <LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:gravity="center_vertical"
				android:layout_marginLeft="22dip"
				>
					<TextView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:id="@+id/tv_otemp"
				    android:textSize="40sp"
				    android:textColor="@color/white"
				    android:text=""
				    >
				</TextView>
					<TextView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:id="@+id/tv_oname"
				    android:textSize="15sp"
				    android:textColor="@color/white"
				    android:text=""
				    android:layout_marginTop="10dip"
				    >
				</TextView>
				<TextView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:id="@+id/tv_odate"
				    android:textSize="12sp"
				    android:textColor="@color/white"
				    android:text=""
				    android:layout_marginTop="10dip"
				    >
				</TextView>
				</LinearLayout>
		</LinearLayout>
		
    	 <LinearLayout
				android:layout_width="280dip"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="12dip"
				android:layout_below="@+id/ll_observer"
				android:layout_centerHorizontal="true"
				>
					<TextView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:textSize="14sp"
				    android:textColor="@color/white"
				    android:id="@+id/tv_indexlable"
				    
				    >
				</TextView>
					<TextView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:id="@+id/tv_index"
				    android:textSize="14sp"
				    android:textColor="@color/white"
				    android:text=""
				    android:layout_marginLeft="10dip"
				    android:lineSpacingExtra="4dip"
				    >
				</TextView>
				</LinearLayout>
    
    	<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_above="@+id/tv_date"
			android:orientation="horizontal"
			android:gravity="center"
			android:layout_marginBottom="15dip"
			>
			 <LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:gravity="center"
				android:id="@+id/ll1"
				>
					<TextView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:id="@+id/tv_11"
				    android:textSize="15sp"
				    android:textColor="@color/white"
				    android:text=""
				    >
					</TextView>
					<ImageView 
				    android:layout_width="40dip"
				    android:layout_height="40dip"
				    android:id="@+id/iv_11"
				    android:layout_marginTop="7dip"
				    >
				</ImageView>
					<TextView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:id="@+id/tv_12"
				    android:textSize="15sp"
				    android:textColor="@color/white"
				    android:text=""
				    android:layout_marginTop="10dip"
				    >
				</TextView>
				<TextView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:id="@+id/tv_13"
				    android:textSize="13sp"
				    android:textColor="@color/white"
				    android:text=""
				    android:layout_marginTop="5dip"
				    >
				</TextView>
				 </LinearLayout>
				 <LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:gravity="center"
				android:id="@+id/ll2"
				>
					<TextView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:id="@+id/tv_21"
				    android:textSize="15sp"
				    android:textColor="@color/white"
				    android:text=""
				    >
					</TextView>
					<ImageView 
				    android:layout_width="40dip"
				    android:layout_height="40dip"
				    android:id="@+id/iv_21"
				    android:layout_marginTop="7dip"
				    >
				</ImageView>
					<TextView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:id="@+id/tv_22"
				    android:textSize="15sp"
				    android:textColor="@color/white"
				    android:text=""
				    android:layout_marginTop="10dip"
				    >
				</TextView>
				<TextView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:id="@+id/tv_23"
				    android:textSize="13sp"
				    android:textColor="@color/white"
				    android:text=""
				    android:layout_marginTop="5dip"
				    >
				</TextView>
				 </LinearLayout>
				 
				 <LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:gravity="center"
				android:id="@+id/ll3"
				>
					<TextView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:id="@+id/tv_31"
				    android:textSize="15sp"
				    android:textColor="@color/white"
				    android:text=""
				    >
					</TextView>
					<ImageView 
				    android:layout_width="40dip"
				    android:layout_height="40dip"
				    android:id="@+id/iv_31"
				    android:layout_marginTop="7dip"
				    >
				</ImageView>
					<TextView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:id="@+id/tv_32"
				    android:textSize="15sp"
				    android:textColor="@color/white"
				    android:text=""
				    android:layout_marginTop="10dip"
				    >
				</TextView>
				<TextView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:id="@+id/tv_33"
				    android:textSize="13sp"
				    android:textColor="@color/white"
				    android:text=""
				    android:layout_marginTop="5dip"
				    >
				</TextView>
				 </LinearLayout>
			 </LinearLayout>
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:id="@+id/tv_date"
		    android:layout_alignParentRight="true"
		    android:layout_alignParentBottom = "true"
		    android:textSize="12sp"
		    android:textColor="@color/white"
		    android:layout_marginRight="10dip"
		    android:layout_marginBottom="11dip"
		    android:text="发布日期"
		    >
		</TextView>
		
</RelativeLayout>