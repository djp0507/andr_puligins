<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="49dip" 
	    android:orientation="horizontal"
	    android:background="@drawable/menu_item_selector"
	    >
		 <TextView 
		     android:layout_height="wrap_content" 
		     android:layout_width="wrap_content"
		     android:layout_gravity="center_vertical"
		     android:layout_marginLeft="20dip"
		     android:textSize="@dimen/text_size_14"
		     android:textColor="@color/sbc_header_text"
		     android:text="类型:"
		     />
		  <LinearLayout 
		    android:id="@+id/ly_writer_type"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="horizontal"
		    android:gravity="right"
		    android:clickable="true"
		    android:onClick="selectType"
		    android:background="@drawable/menu_item_selector"
		    >
			    <TextView 
			       	 android:id="@+id/tv_writer_type"
				     android:layout_height="wrap_content" 
				     android:layout_width="wrap_content"
				     android:layout_gravity="center_vertical"
				     android:layout_marginRight="20dip"
				     android:textSize="@dimen/text_size_14"
				     android:textColor="@color/kd_email_ct"
				     android:text="公民"
				     />
			    <TextView 
			         android:id="@+id/im_writer_type"
				     android:layout_height="13dip" 
				     android:layout_width="15dip"
				     android:layout_gravity="center_vertical"
				     android:layout_marginRight="20dip"
			        />
		    </LinearLayout>
	</LinearLayout>
   <include layout="@layout/line_grey_padding"></include>
<!--     姓名或者单位 -->
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="49dip" 
	    android:orientation="horizontal"
	    android:background="@drawable/menu_item_selector"
	    >
		 <TextView 
		     android:layout_height="wrap_content" 
		     android:layout_width="wrap_content"
		     android:layout_gravity="center_vertical"
		     android:layout_marginLeft="20dip"
		     android:textSize="@dimen/text_size_14"
		     android:textColor="@color/sbc_header_text"
		     android:text="姓名（或单位名称）:"
		     />
		  <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="horizontal"
		    android:gravity="right"
		    android:background="@drawable/menu_item_selector"
		    >
			    <EditText 
			       	 android:id="@+id/et_writerName"
				     android:layout_height="match_parent"
				     android:layout_width="match_parent"
				     android:paddingRight="40dip"
				     android:textSize="@dimen/text_size_14"
				     android:textColor="@color/kd_email_ct"
				     android:background="@null"
				     android:gravity="center_vertical|right"
				     android:text=""
				     />
		    </LinearLayout>
	</LinearLayout>
   <include layout="@layout/line_grey_padding"></include>
<!--     身份证号 -->
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="49dip" 
	    android:orientation="horizontal"
	    android:background="@drawable/menu_item_selector"
	    >
		 <TextView 
		     android:layout_height="wrap_content" 
		     android:layout_width="wrap_content"
		     android:layout_gravity="center_vertical"
		     android:layout_marginLeft="20dip"
		     android:textSize="@dimen/text_size_14"
		     android:textColor="@color/sbc_header_text"
		     android:text="身份证号:"
		     />
		  <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="horizontal"
		    android:gravity="right"
		    android:background="@drawable/menu_item_selector"
		    >
			    <EditText 
			       	 android:id="@+id/et_writerIdNo"
				     android:layout_height="match_parent"
				     android:layout_width="match_parent"
				     android:paddingRight="40dip"
				     android:textSize="@dimen/text_size_14"
				     android:textColor="@color/kd_email_ct"
				     android:background="@null"
				     android:gravity="center_vertical|right"
				     android:text=""
				     />
		    </LinearLayout>
	</LinearLayout>
   <include layout="@layout/line_grey_padding"></include>
<!--     电话号码 -->
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="49dip" 
	    android:orientation="horizontal"
	    android:background="@drawable/menu_item_selector"
	    >
		 <TextView 
		     android:layout_height="wrap_content" 
		     android:layout_width="wrap_content"
		     android:layout_gravity="center_vertical"
		     android:layout_marginLeft="20dip"
		     android:textSize="@dimen/text_size_14"
		     android:textColor="@color/sbc_header_text"
		     android:text="电话号码:"
		     />
		  <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="horizontal"
		    android:gravity="right"
		    android:background="@drawable/menu_item_selector"
		    >
			    <EditText 
			       	 android:id="@+id/et_writer_tel"
				     android:layout_height="match_parent"
				     android:layout_width="match_parent"
				     android:paddingRight="40dip"
				     android:textSize="@dimen/text_size_14"
				     android:textColor="@color/kd_email_ct"
				     android:background="@null"
				     android:gravity="center_vertical|right"
				     android:text=""
				     android:enabled="false"
				     />
		    </LinearLayout>
	</LinearLayout>
   <include layout="@layout/line_grey_padding"></include>
<!--     联系地址 -->
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="49dip" 
	    android:orientation="horizontal"
	    android:background="@drawable/menu_item_selector"
	    >
		 <TextView 
		     android:layout_height="wrap_content" 
		     android:layout_width="wrap_content"
		     android:layout_gravity="center_vertical"
		     android:layout_marginLeft="20dip"
		     android:textSize="@dimen/text_size_14"
		     android:textColor="@color/sbc_header_text"
		     android:text="联系地址:"
		     />
		  <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="horizontal"
		    android:gravity="right"
		    android:background="@drawable/menu_item_selector"
		    >
			    <EditText 
			       	 android:id="@+id/et_writer_addr"
				     android:layout_height="match_parent"
				     android:layout_width="match_parent"
				     android:paddingRight="40dip"
				     android:textSize="@dimen/text_size_14"
				     android:textColor="@color/kd_email_ct"
				     android:background="@null"
				     android:gravity="center_vertical|right"
				     android:text=""
				     />
		    </LinearLayout>
	</LinearLayout>
   <include layout="@layout/line_grey_padding"></include>
<!--     E-MAIL -->
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="49dip" 
	    android:orientation="horizontal"
	    android:background="@drawable/menu_item_selector"
	    >
		 <TextView 
		     android:layout_height="wrap_content" 
		     android:layout_width="wrap_content"
		     android:layout_gravity="center_vertical"
		     android:layout_marginLeft="20dip"
		     android:textSize="@dimen/text_size_14"
		     android:textColor="@color/sbc_header_text"
		     android:text="E-MAIL:"
		     />
		  <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="horizontal"
		    android:gravity="right"
		    android:background="@drawable/menu_item_selector"
		    >
			    <EditText 
			       	 android:id="@+id/et_writer_email"
				     android:layout_height="match_parent"
				     android:layout_width="match_parent"
				     android:paddingRight="40dip"
				     android:textSize="@dimen/text_size_14"
				     android:textColor="@color/kd_email_ct"
				     android:background="@null"
				     android:gravity="center_vertical|right"
				     android:inputType="textEmailAddress"
				     android:hint="@string/zh_not_need"
				     />
		    </LinearLayout>
	</LinearLayout>
   <include layout="@layout/line_grey_padding"></include>
   
<!--    收件人 -->
   <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="49dip" 
	    android:orientation="horizontal"
	    android:background="@drawable/menu_item_selector"
	    >
		 <TextView 
		     android:layout_height="wrap_content" 
		     android:layout_width="wrap_content"
		     android:layout_gravity="center_vertical"
		     android:layout_marginLeft="20dip"
		     android:textSize="@dimen/text_size_14"
		     android:textColor="@color/sbc_header_text"
		     android:text="收件人:"
		     />
		  <LinearLayout 
		    android:id="@+id/ly_receiver"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="horizontal"
		    android:gravity="right"
		    android:clickable="true"
		    android:onClick="selectType"
		    android:background="@drawable/menu_item_selector"
		    >
			    <TextView 
			       	 android:id="@+id/tv_receiver"
				     android:layout_height="wrap_content" 
				     android:layout_width="wrap_content"
				     android:layout_gravity="center_vertical"
				     android:layout_marginRight="20dip"
				     android:textSize="@dimen/text_size_14"
				     android:textColor="@color/kd_email_ct"
				     android:text="请选择收件人"
				     />
			    <TextView 
			         android:id="@+id/im_receiver_type"
				     android:layout_height="13dip" 
				     android:layout_width="15dip"
				     android:layout_gravity="center_vertical"
				     android:layout_marginRight="20dip"
			        />
		    </LinearLayout>
	</LinearLayout>
   <include layout="@layout/line_grey_padding"></include>
   
<!--    问题类型-->
   <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="49dip" 
	    android:orientation="horizontal"
	    android:background="@drawable/menu_item_selector"
	    >
		 <TextView 
		     android:layout_height="wrap_content" 
		     android:layout_width="wrap_content"
		     android:layout_gravity="center_vertical"
		     android:layout_marginLeft="20dip"
		     android:textSize="@dimen/text_size_14"
		     android:textColor="@color/sbc_header_text"
		     android:text="问题类型:"
		     />
		  <LinearLayout 
		    android:id="@+id/ly_question_type"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="horizontal"
		    android:gravity="right"
		    android:clickable="true"
		    android:onClick="selectType"
		    android:background="@drawable/menu_item_selector"
		    >
			    <TextView 
			       	 android:id="@+id/tv_question_type"
				     android:layout_height="wrap_content" 
				     android:layout_width="wrap_content"
				     android:layout_gravity="center_vertical"
				     android:layout_marginRight="20dip"
				     android:textSize="@dimen/text_size_14"
				     android:textColor="@color/kd_email_ct"
				     android:text="请选择问题类型"
				     />
			    <TextView 
			         android:id="@+id/im_question_type"
				     android:layout_height="13dip" 
				     android:layout_width="15dip"
				     android:layout_gravity="center_vertical"
				     android:layout_marginRight="20dip"
			        />
		    </LinearLayout>
	</LinearLayout>
   <include layout="@layout/line_grey_padding"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/menu_item_selector"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dip"
            android:clickable="true"
		    android:onClick="toNext"
		    android:textColor="@color/white"
            android:text="@string/zh_next_step" />
		  
     </LinearLayout>  
</LinearLayout>
