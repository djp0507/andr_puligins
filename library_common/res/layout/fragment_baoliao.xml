<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
 
    <fragment
    android:id="@+id/fl_other_baoliao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"   
    android:layout_marginBottom="45dip"
    class="com.plugin.commons.ui.baoliao.NetfBaoliaoTabFragment" />
    
    <fragment
    android:id="@+id/fl_my_baoliao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"   
    android:layout_marginBottom="45dip"
    class="com.plugin.commons.ui.baoliao.MyBaoliaoFragment"
    />
     
    
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="59dip"
    android:id="@+id/rl_bottom"
    android:layout_alignParentBottom="true"
    android:background="@drawable/complain_tabbar">
    	<LinearLayout
		    android:layout_width="@dimen/gov_ask_width"
		    android:layout_height="59dip"
		    android:id="@+id/ll_ask" 
		    android:orientation="vertical"
		    android:background="@drawable/semicircle"
		    android:gravity="center"
		    android:layout_centerInParent="true"
		    >
		    	<Button
				    android:layout_width="50dip"
				    android:layout_height="59dip"
				    android:id="@+id/btn_baoliao" 
				    >
				    </Button>
		    
		    </LinearLayout>
		    
    		<LinearLayout
    		    android:id="@+id/ll_other_bl"
    		    android:layout_width="350dip"
    		    android:layout_height="45dip"
    		    android:layout_alignParentBottom="true"
    		    android:layout_toLeftOf="@+id/ll_ask"
    		    android:gravity="center"
    		    android:orientation="vertical" >

		    	<Button
		    	    android:id="@+id/btn_other_bl"
		    	    android:layout_width="wrap_content"
				     android:layout_height="wrap_content"
		    	    android:layout_marginTop="2dip"
		    	    android:clickable="false" >

				    </Button>
				 <TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:id="@+id/tv_other_bl" 
				    android:text="@string/zh_other_bl"
				    android:textColor="@color/grey_font2"
				    android:layout_marginTop="4dip"
				    android:textSize="10sp"
				    >
				    </TextView>
		    </LinearLayout>
		    
		    
		    <LinearLayout
		    android:layout_width="350dip"
		    android:layout_height="45dip"
		    android:id="@+id/ll_my_bl" 
		    android:orientation="vertical"
		    android:gravity="center"
		    android:layout_toRightOf="@+id/ll_ask"
		    android:layout_alignParentBottom="true"
		    >

				 <Button
				     android:id="@+id/btn_my_bl"
				     android:layout_width="wrap_content"
				     android:layout_height="wrap_content"
				     android:layout_marginTop="2dip"
				     android:clickable="false" >

				    </Button>
				 <TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:id="@+id/tv_my_bl" 
				    android:text="@string/zh_my_bl"
				    android:textSize="10sp"
				    android:textColor="@color/grey_font2"
				    android:layout_marginTop="4dip"
				    >
				    </TextView>
		    </LinearLayout>
		    
        </RelativeLayout>

</RelativeLayout>
