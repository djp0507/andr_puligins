<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--  书记信箱 -->
    <fragment
    android:id="@+id/fl_petition_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"   
    android:layout_marginBottom="45dip"
    class="com.plugin.commons.petition.PetitionListFragment" />
      
<!--     底部bar -->
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="59dip"
    android:id="@+id/rl_bottom"
    android:layout_alignParentBottom="true"
    android:background="@drawable/complain_tabbar">
    	<LinearLayout
		    android:layout_width="@dimen/gov_ask_width"
		    android:layout_height="59dip"
		    android:id="@+id/ll_ask" 
		    android:orientation="vertical"
		    android:background="@drawable/semicircle"
		    android:gravity="center"
		    android:layout_centerInParent="true"
		    >
		    	<Button
				    android:layout_width="50dip"
				    android:layout_height="59dip"
				    android:id="@+id/btn_petition" 
				    >
				    </Button>
		    
		    </LinearLayout>
		    
        </RelativeLayout>

</RelativeLayout>
